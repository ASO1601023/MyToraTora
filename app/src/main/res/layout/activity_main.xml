<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s_house"
    tools:context="com.example.miyazakikazuki.mytoratora.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="じゃんけん......"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/pa"
        android:layout_width="112dp"
        android:layout_height="165dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="262dp"
        android:onClick="onJankenButtonTapped"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintLeft_toRightOf="@+id/gu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s_baba" />

    <ImageView
        android:id="@+id/gu"
        android:layout_width="113dp"
        android:layout_height="119dp"
        android:adjustViewBounds="false"
        android:onClick="onJankenButtonTapped"
        app:srcCompat="@drawable/s_samurai"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="272dp" />

    <ImageView
        android:id="@+id/choki"
        android:layout_width="116dp"
        android:layout_height="141dp"
        android:layout_marginTop="101dp"
        android:onClick="onJankenButtonTapped"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/s_mig"
        app:layout_constraintLeft_toRightOf="@+id/gu"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
